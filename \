#include "philo.h"

void	*routine(void *args)
{
	t_table	*table;
	int		id;

	table = (t_table *)args;
	id = *(int *)(args + 1);
	while (1)
	{
		printf("%u philo %i is eating\n", get_timenow(), id);
		usleep(table->t_eat * 1000);
		printf("%u philo %i is sleeping\n", get_timenow(), id);
		usleep(table->t_sleep * 1000);
		printf("%u philo %i is thinking\n", get_timenow(), id);
		usleep(table->t_sleep * 1000);
	}
	return (NULL);
}
